
@using GeziSitesi.Models.Classlar
@model List<Blog>

    @foreach (var item in Model)
    {


    <div class="right">
        <div class="bot-left">
            <img src="@item.blogImg" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.baslik</h4>
            <span >@item.tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.aciklama.Substring(0, 93)</p>
            <p><a href="#"><span class="read">Devamını oku >></span></a></p>
        </div>
    </div>
    }



